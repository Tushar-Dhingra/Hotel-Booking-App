<% layout('/layouts/boilerplate') %>

<h1>All Hotels</h1>

<!-- Map Section -->
<div class="mb-4">
    <div id="hotel-map" style="height: 400px; width: 100%;"></div>
</div>

<!-- Hotels List -->
<% for (let hotel of hotels){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" alt="" src="<%=hotel.images[0].url%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= hotel.title %> </h5>
                <p class="card-text"><%= hotel.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= hotel.location%></small>
                </p>
                <a class="btn btn-primary" href="/hotels/<%=hotel._id%>">View <%=hotel.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

<script src="/javascripts/hotelMap.js"></script>
<script>
    const hotels = <%- JSON.stringify(hotels) %>;
    document.addEventListener('DOMContentLoaded', function() {
        initializeMap(hotels);
    });
</script>